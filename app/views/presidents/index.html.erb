<div class="mx-auto mt-2 mb-3"><h1 class="text-center">Presidents to rent</h1></div>
<div class="container">
  <div class="row">
    <% @presidents.each do |president| %>
      <div class="col-lg-3 col-md-4 col-sm-12 mb-5"> <!-- 4 cartes par ligne sur grands Ã©crans, 3 sur tablettes, 1 sur mobiles -->
        <a href="<%= president_path(president) %>">
          <div class="card-trip card-trip-list custom-link">
            <% president.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
            <% end  %>
            <div class="card-trip-infos">
              <div>
                <%= president.name %>
                <p><%= president.description.split('.').first + '.' %></p>
              </div>
              <h2 class="card-trip-pricing">$10 per day</h2>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
