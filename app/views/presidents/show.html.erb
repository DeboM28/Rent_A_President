<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @president.name %></h2>
      <p><%= @president.description %></p>

      <!-- Liste des services -->
      <h4>Price :</h4>
      <p>10$ per day</p>

      <!-- Calendrier HTML5 -->
      <h4>Availabilities :</h4>
      <%# faire un formulaire pour le booking avec simple form @booking qui pointera vers create booking controller %>

      <%= simple_form_for(@booking) do |f| %>
      <%= f.input :start_date,
            label: "Booking dates",
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
      <%= f.submit "Book this president", class: "btn btn-primary", id: "book-button" %>
      <%= link_to "Back to the list", presidents_path, class: "btn btn-secondary" %>
      
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="border rounded p-2 shadow">
        <!-- Affichage des photos du président -->
        <% @president.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "img-fluid", alt: "President Photo" %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Fermeture du premier container -->
</div>

<!-- Carte avec Mapbox -->
<div class="container mt-4">

  <h4>Localisation :</h4>
  <div style="width: 100%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<!-- Fermeture du deuxième container -->
</div>

 <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@president, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class: "btn btn-flat mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
